{
  "name": "all-or-nothing",
  "version": "1.0.0",
  "description": "A comprehensive npm package for ensuring atomic API operations in distributed Node.js applications using Saga patterns, compensating transactions, and idempotent operations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npx tsc",
    "dev": "npx tsc --watch",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "lint": "npx eslint src/**/*.ts",
    "lint:fix": "npx eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "distributed-transactions",
    "saga-pattern",
    "atomic-operations",
    "microservices",
    "compensating-transactions",
    "idempotent-apis",
    "transactional-outbox",
    "event-sourcing",
    "nodejs",
    "typescript"
  ],
  "author": "Ankit Sharma",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ankitsharma97/all-or-nothing.git"
  },
  "bugs": {
    "url": "https://github.com/ankitsharma97/all-or-nothing.git/issues"
  },
  "homepage": "https://github.com/ankitsharma97/all-or-nothing#readme",
  "dependencies": {
    "joi": "^17.11.0",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.9",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "express": "^4.18.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
